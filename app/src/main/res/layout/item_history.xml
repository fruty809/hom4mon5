<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="30dp"
    android:background="@drawable/design_item"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_first_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurai"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/iv_icon_love"
        app:layout_constraintEnd_toStartOf="@id/tv_equally"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_equally"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="48sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_love"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon_love"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_mini_love"
        app:layout_constraintBottom_toTopOf="@id/tv_second_name_item"
        app:layout_constraintEnd_toStartOf="@id/tv_equally"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_name_item" />


    <TextView
        android:id="@+id/tv_second_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iman"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_equally"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_love" />

    <TextView
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:id="@+id/tv_percentage_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/tv_equally"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_love"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_love"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_equally"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>